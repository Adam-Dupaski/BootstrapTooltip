<?xml version="1.0" encoding="utf-8" ?>
<widget id="BootstrapTooltip.widget.BootstrapTooltip" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>BootstrapTooltip</name>
    <description>The description of this widget.</description>

    <icon></icon>

    <properties>
        <property key="tooltipClassName" type="string" required="true">
            <caption>Tooltip classname</caption>
            <category>Appearance</category>
            <description>The class name of the field to attach the tooltip to.</description>
        </property>
        <property key="tooltipMessageString" type="string" required="false">
            <caption>Message</caption>
            <category>Data source</category>
            <description>The message visible within the tooltip.</description>
        </property>
        <property key="tooltipLocation" type="enumeration" defaultValue="top">
            <caption>Tooltip Location</caption>
            <category>Appearance</category>
            <description>The location of the tooltip relative to the field.</description>
            <enumerationValues>
                <enumerationValue key="top">Top</enumerationValue>
                <enumerationValue key="left">Left</enumerationValue>
                <enumerationValue key="bottom">Bottom</enumerationValue>
                <enumerationValue key="right">Right</enumerationValue>
            </enumerationValues>
        </property>
        <property key="tooltipMode" type="enumeration" defaultValue="hover">
            <caption>Tooltip mode</caption>
            <category>Appearance</category>
            <description>When to show the tooltip.</description>
            <enumerationValues>
                <enumerationValue key="hover">On hover</enumerationValue>
                <enumerationValue key="click">On click</enumerationValue>
            </enumerationValues>
        </property>
        <property key="tooltipMessageEntity" type="entity" required="false">
            <caption>Message entity</caption>
            <category>Data source</category>
            <description>The entity that contains the text attribute to show in the tooltip.</description>
        </property>
        <property key="tooltipEntityConstraint" type="entityConstraint" entityProperty="tooltipMessageEntity" required="false">
            <caption>Message entity Constraint</caption>
            <category>Data source</category>
            <description>The XPath constraint on the entity. Please make sure that this restricts the amount to one object</description> 
        </property>
        <property key="tooltipMessageAttribute" type="attribute" required="false" entityProperty="tooltipMessageEntity" isPath="no">
            <caption>Message Attribute</caption>
            <category>Data source</category>
            <description>The attribute to use for the message visible within the tooltip.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
    </properties>
</widget>

